{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/pdf-plumber-service",
      "destination": "/api/pdf-plumber-service"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    },
    "api/pdf-plumber-service.py": {
      "maxDuration": 60,
      "memory": 1024
    }
  }
}
