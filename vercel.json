{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist/public",
  "rewrites": [
    {
      "source": "/api/pdf-plumber-service",
      "destination": "/api/pdf-plumber-service"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/index.ts": {
      "maxDuration": 10
    },
    "api/pdf-plumber-service.py": {
      "maxDuration": 30,
      "runtime": "python3.11"
    }
  }
}
